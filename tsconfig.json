{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": [],
    "typeRoots": ["./@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
